<Window x:Class="WPFClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFClientApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="callServiceButton" Content="Call Service" Grid.Row="0" Grid.Column="0" Margin="25" Click="callServiceButton_Click"/>
        <Button x:Name="signInButton" Content="Sign In" Grid.Row="0" Grid.Column="1" Margin="25" Click="signInButton_Click"/>
        <TextBlock x:Name="serviceResult" Grid.Row="1" Grid.ColumnSpan="2" Margin="5"/>
    </Grid>
</Window>
